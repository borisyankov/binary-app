<?xml version='1.0' encoding='utf-8'?>
<widget id="app.binary.com" version="1.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Binary Options Trading</name>
    <description>
        Trade Binary Options with Binary.com
    </description>
    <author email="support@binary.com" href="https://binary.com">
        Binary Ltd.
    </author>
    <content src="home.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-code-push" version="1.8.2-beta" />
    <plugin name="cordova-plugin-splashscreen" version="3.2.2" />
    <plugin name="cordova-plugin-keyboard" version="1.1.4" />
    <plugin name="cordova-plugin-inappbrowser" value="CDVInAppBrowser" />
    <allow-navigation href="*://*.binary.com/*" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="BackgroundColor" value="#2a3052" />
    <preference name="KeyboardShrinksView" value="true" /> 
    <preference name="orientation" value="portrait" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenBackgroundColor" value="#2a3052" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="ShowSplashScreenSpinner" value="true" />
    <preference name="SplashScreenDelay" value="10000" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="FadeSplashScreenDuration" value="250" />
    <feature name="SplashScreen">
        <param name="ios-package" value="CDVSplashScreen" />
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
        <param name="onload" value="true" />
    </feature>
