<?xml version='1.0' encoding='utf-8'?>
<widget id="app.binary.com" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Binary Options Trading</name>
    <description>
        Trade Binary Options with Binary.com
    </description>
    <author email="support@binary.com" href="https://binary.com">
        Binary Ltd.
    </author>
    <content src="home.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-code-push" version="1.8.2-beta" />
    <plugin name="cordova-plugin-splashscreen" version="3.2.2"></plugin>
    <allow-navigation href="*://*.binary.com/*" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />

    <preference name="SplashScreen" value="screen" />
    <preference name="AutoHideSplashScreen" value="false" />
    <preference name="ShowSplashScreenSpinner" value="true" />
    <preference name="SplashScreenDelay" value="5000" />

    <feature name="SplashScreen" >
        <param name="ios-package" value="CDVSplashScreen"/>
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
        <param name="onload" value="true" />
    </feature>

    <platform name="android">
        <!-- you can use any density that exists in the Android project -->
        <splash src="res/screen/android/screen-land-hdpi.png" density="land-hdpi"/>
        <splash src="res/screen/android/screen-land-ldpi.png" density="land-ldpi"/>
        <splash src="res/screen/android/screen-land-mdpi.png" density="land-mdpi"/>
        <splash src="res/screen/android/screen-land-xhdpi.png" density="land-xhdpi"/>
        
        <splash src="res/screen/android/screen-port-hdpi.png" density="port-hdpi"/>
        <splash src="res/screen/android/screen-port-ldpi.png" density="port-ldpi"/>
        <splash src="res/screen/android/screen-port-mdpi.png" density="port-mdpi"/>
        <splash src="res/screen/android/screen-port-xhdpi.png" density="port-xhdpi"/>
    </platform>

    <platform name="ios">
        <!-- images are determined by width and height. The following are supported -->
       <!-- you can use any density that exists in the Android project -->
        <splash src="res/screen/ios/Default~iphone.png" width="320" height="480"/>
        <splash src="res/screen/ios/Default@2x~iphone.png" width="640" height="960"/>
        <splash src="res/screen/ios/Default-Portrait~ipad.png" width="768" height="1024"/>
        <splash src="res/screen/ios/Default-Portrait@2x~ipad.png" width="1536" height="2048"/>
        <splash src="res/screen/ios/Default-Landscape~ipad.png" width="1024" height="768"/>
        <splash src="res/screen/ios/Default-Landscape@2x~ipad.png" width="2048" height="1536"/>
        <splash src="res/screen/ios/Default-568h@2x~iphone.png" width="640" height="1136"/>
        <splash src="res/screen/ios/Default-667h.png" width="750" height="1334"/>
        <splash src="res/screen/ios/Default-736h.png" width="1242" height="2208"/>
        <splash src="res/screen/ios/Default-Landscape-736h.png" width="2208" height="1242"/>
    </platform>

    <platform name="windows">
        <splash src="res/screen/windows/screen-land-hdpi.png" density="land-hdpi"/>
        <splash src="res/screen/windows/screen-land-ldpi.png" density="land-ldpi"/>
        <splash src="res/screen/windows/screen-land-mdpi.png" density="land-mdpi"/>
        <splash src="res/screen/windows/screen-land-xhdpi.png" density="land-xhdpi"/>
        
        <splash src="res/screen/windows/screen-port-hdpi.png" density="port-hdpi"/>
        <splash src="res/screen/windows/screen-port-ldpi.png" density="port-ldpi"/>
        <splash src="res/screen/windows/screen-port-mdpi.png" density="port-mdpi"/>
        <splash src="res/screen/windows/screen-port-xhdpi.png" density="port-xhdpi"/>
    </platform>

    <!-- icons -->
    <platform name="android">
        <icon src="res/icon/android/icon-ldpi.png" density="ldpi" />
        <icon src="res/icon/android/icon-mdpi.png" density="mdpi" />
        <icon src="res/icon/android/icon-hdpi.png" density="hdpi" />
        <icon src="res/icon/android/icon-xhdpi.png" density="xhdpi" />
     </platform>

     <platform name="ios">
        <icon src="res/icon/ios/icon-ldpi.png" density="ldpi" />
        <icon src="res/icon/ios/icon-mdpi.png" density="mdpi" />
        <icon src="res/icon/ios/icon-hdpi.png" density="hdpi" />
        <icon src="res/icon/ios/icon-xhdpi.png" density="xhdpi" />
     </platform>
     <platform name="windows">
        <icon src="res/icon/windows/icon-ldpi.png" density="ldpi" />
        <icon src="res/icon/windows/icon-mdpi.png" density="mdpi" />
        <icon src="res/icon/windows/icon-hdpi.png" density="hdpi" />
        <icon src="res/icon/windows/icon-xhdpi.png" density="xhdpi" />
     </platform>

    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="CodePushDeploymentKey" value="rVLju2NoxbcCyC9f3h2biGcCRx8Y4JBH-fLXW" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="CodePushDeploymentKey" value="jjkbJszpMuCQ0fueC772jTwfW1la4JBH-fLXW" />
    </platform>
</widget>
